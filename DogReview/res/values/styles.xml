<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="header_title">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/welcome_title</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">#FCFCFC</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="description_text">
        <item name="android:textColor">@color/welcome_des</item>
        <item name="android:textSize">@dimen/welcome_des</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/welcome_title</item>
    </style>

    <style name="setting_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/setting_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="setting_text_dev_info">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/setting_text_dev_info</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="big_text">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="big_text_bold">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_text_bold">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/welcome_title</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="setting_list_divider">
        <item name="android:background">@color/setting_dilivery</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <declare-styleable name="CenterSymmetricListview">
        <attr name="indent_offset" format="dimension" />
    </declare-styleable>

</resources>